{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Weekend",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/InOneWeekend/main.cc",
                "-o",
                "${workspaceFolder}/build/bin/weekend"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/weekend",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "dependsOn":["C/C++: g++ build active file"],
            "problemMatcher": [],
            "detail": "Runs the built executable"
        }
    ],
    "version": "2.0.0"
}